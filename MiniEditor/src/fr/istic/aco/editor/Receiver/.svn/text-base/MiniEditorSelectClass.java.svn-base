
package fr.istic.aco.editor.Receiver;

/**
 * The Class MiniEditorSelectClass.
 * 
 * @author Shashi Mohan Reddy, Nidhi Saini
 */
public class MiniEditorSelectClass implements MiniEditorSelect {
	
	/** The beg. */
	int beg;
	
	/** The end. */
	int end;
	
	/**
	 * Instantiates a new mini editor select class.
	 */
	public MiniEditorSelectClass()
	{
		//this.buffer = buffer;
		beg = 0 ;
		end = 0;
	}
	
	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.Receiver.MiniEditorSelect#setBegin(int)
	 */
	@Override
	public void setBegin(int i) {
		this.beg = i;
		// TODO Auto-generated method stub

	}

	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.Receiver.MiniEditorSelect#getBegin()
	 */
	@Override
	public int getBegin() {
		// TODO Auto-generated method stub
		return beg;
	}

	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.Receiver.MiniEditorSelect#getEnd()
	 */
	@Override
	public int getEnd() {
		// TODO Auto-generated method stub
		return end;
	}

	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.Receiver.MiniEditorSelect#getLength()
	 */
	@Override
	public int getLength() {
		// TODO Auto-generated method stub
		return Math.abs(end - beg);
	}

	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.Receiver.MiniEditorSelect#setEnd(int)
	 */
	@Override
	public void setEnd(int i) {
		this.end = i;
		// TODO Auto-generated method stub

	}

}
